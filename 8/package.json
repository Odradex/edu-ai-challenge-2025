{
  "name": "typescript-validation-library",
  "version": "1.0.0",
  "description": "A robust, type-safe validation library for TypeScript - Core library with pizza ordering examples",
  "main": "dist/validation-core/validation-library.js",
  "types": "dist/validation-core/validation-library.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "dev": "ts-node examples/pizza-example.ts",
    "demo": "ts-node demo.ts",
    "clean": "rm -rf dist coverage",
    "prepublish": "npm run clean && npm run build"
  },
  "keywords": [
    "typescript",
    "validation",
    "schema",
    "type-safe",
    "library",
    "form-validation",
    "data-validation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "validation-core/**/*.ts",
      "!**/*.test.ts",
      "!**/*.d.ts",
      "!dist/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/typescript-validation-library.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/typescript-validation-library/issues"
  },
  "homepage": "https://github.com/yourusername/typescript-validation-library#readme"
}
