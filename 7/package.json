{
  "name": "seabattle-modern",
  "version": "1.0.0",
  "description": "Modern refactored Sea Battle game",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": ["battleship", "game", "console", "javascript"],
  "author": "Refactored",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/core": "^7.23.0",
    "babel-jest": "^29.7.0"
  },
  "dependencies": {
    "readline": "^1.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
} 